<%= form_with model:hobby,url: hobbys_path,method: :post,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control hobby_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control hobby_body' %>
    <%= f.select :rate, Hobby.rates.keys.to_a, {} %>
  </div>

  <div class="form-group">
    <%= f.fields_for :hobby_image do |i| %>
        <%= i.label :image %>
        <%= i.attachment_field :image, class: "form-control-file user_image" %>
  <% end %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>