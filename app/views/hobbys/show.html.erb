<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
    
      <h2 class="mt-3">New hobby</h2>
      <%= render 'form', hobby: @hobbys %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Hobby detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@hobby.user) do %>
            <%= attachment_image_tag(@hobby.hobby_image, :image, :fill, 100, 100, fallback: "no_image2.png") %><br>
            <%= @hobby.user.name %>
            <% end %>
          </td>
          <td><%= link_to @hobby.title, hobby_path(@hobby)%></td>
          <td><%= @hobby.body %></td>
         　<td><%= @hobby.rate %></td>
         　<td class="sentiment-score">本文の感情分析スコア[<%= @hobby.score %>]</td>

          <% if @user.id == current_user.id%>
            <td><%= link_to 'Edit', edit_hobby_path(@hobby), class: "btn btn-sm btn-success edit_hobby_#{@hobby.id}" %></td>
            <td><%= link_to 'Destroy', hobby_path(@hobby), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_hobby_#{@hobby.id}"%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>